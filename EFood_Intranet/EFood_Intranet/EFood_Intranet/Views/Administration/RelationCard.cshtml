@model IEnumerable<EFoodBLL.IntranetModels.RelationCardProcessor>

@{
    ViewBag.Title = "Relacion Tarjeta-Procesador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        @using (Html.BeginForm("RelationCard", "Administration", null, FormMethod.Post,  new {role = "form", @class = "centerInfoPP"}))
        {
            <h1>Lista de tarjetas</h1>
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.CheckBoxFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
