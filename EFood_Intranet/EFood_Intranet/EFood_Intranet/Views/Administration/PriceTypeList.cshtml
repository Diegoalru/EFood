@model IEnumerable<EFoodBLL.IntranetModels.PriceTypeList>

@{
    ViewBag.Title = "Lista de Tipo de Precio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        <div class="omb_login">
            <h4 class="omb_authTitle" style="color: orangered;overflow-x:auto;">Lista de Tipo de Precio:</h4>
            @Html.ActionLink("Crear Tipo de Precio", "PriceTypeCreate", "Administration", null, new { @class = "primary-btn" })
            <br />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "ErrorMessage" })
            <table class="table table-hover">
                <tr>
                    <th>
                        <label> @Html.DisplayNameFor(model => model.Code) </label><br />
                    </th>
                    <br /><br />
                    <th>
                        <label> @Html.DisplayNameFor(model => model.Type)</label><br />
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "PriceTypeEdit", null, new { id = item.PkCode }, null)
                            @*|@Html.ActionLink("Delete", "DiscountDeleteConfirmed", new { id = item.PkCode })*@
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
