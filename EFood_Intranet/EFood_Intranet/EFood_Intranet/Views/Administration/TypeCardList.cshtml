@model IEnumerable<EFoodBLL.IntranetModels.TypeCardsList>

@{
    ViewBag.Title = "Listado por Tarjetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        <div class="omb_login">
            <h4 class="omb_authTitle" style="color: orangered;overflow-x:auto;">Lista de Tarjetas:</h4>
            @Html.ActionLink("Crear Tipo de Tarjeta", "TypeCardCreate", "Administration", null, new { @class = "primary-btn" })
            <br />
            <br />
            @Html.ValidationSummary("", new { @class = "ErrorMessage" })@*Validation Cheked*@
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        <label>Opciones</label>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "TypeCardEdit", new { id = item.PkCode }) |
                            @Html.ActionLink("Eliminar", "TypeCardDelete", new { id = item.PkCode })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>