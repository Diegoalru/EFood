@model EFoodBLL.IntranetModels.ReturnCardType
@{
    ViewBag.Title = "Edita Tipo de Tarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        <div class="omb_login">
            <br />
            @using (Html.BeginForm("TypeCardEdit", "Administration", null, FormMethod.Post, new { role = "form", @class = "center3" }))
            {
                <h4 style="color: orangered;">Informacion de consecutivo</h4>
                @Html.ValidationSummary("", new { @class = "ErrorMessage" }) @*Validation Cheked*@
                @Html.TextBoxFor(item => item.PkCode, new { @type = "hidden", @readonly = "readonly" })
                <br />
                <label>@Html.DisplayNameFor(item => item.Type)</label><br />
                @Html.TextBoxFor(item => item.Type, new { id = "fname", placeholder = "Tipo" })
                <br /><br />
                <input type="submit" class="primary-btn" value="Guardar" />
                @Html.ActionLink("Volver", "TypeCardList")
            }
        </div>
    </div>
</div>