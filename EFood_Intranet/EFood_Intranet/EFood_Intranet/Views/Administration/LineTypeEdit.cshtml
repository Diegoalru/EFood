
@using EFoodBLL.IntranetModels
@model EFoodBLL.IntranetModels.ReturnLineType

@{
    ViewBag.Title = "Editar Tipo de Comida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        <div class="omb_login">
            <br />
            @using (Html.BeginForm("LineTypeEdit", "Administration", null, FormMethod.Post, new { role = "form", @class = "center3" }))
            {
                <h4 style="color: orangered;">Informacion de Tipo de Comida</h4>
                @Html.ValidationSummary("", new { @class = "ErrorMessage" })@*Validation Cheked*@
                @Html.TextBoxFor(item => item.PkCode, new { @type = "hidden", @readonly = "readonly" })
                <br />
                <label for="Code">Type:</label>
                @Html.TextBoxFor(item => item.Type, new { id = "fname", placeholder = "Type" })
                <br />
                <input type="submit" class="primary-btn" value="Guardar" />
                @Html.ActionLink("Volver", "LineTypeList")
            }
        </div>
    </div>
</div>
