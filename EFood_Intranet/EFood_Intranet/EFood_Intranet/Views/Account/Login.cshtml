@model EFoodBLL.IntranetModels.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="home">
    <div class="container">
        <div class="omb_login">
            <h3 class="omb_authTitle">Inicio de Sesión </h3>
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    @using (Html.BeginForm("Login", "Account", new { ResponseUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "omb_loginForm" }))
                    {
                        @Html.ValidationSummary("", new { @class = "ErrorMessage" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(model => model.Username, new {@class="form-control", @placeholder="Username"})
                        </div>
                        <span class="help-block"></span>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.TextBoxFor(model => model.Password, new {@class="form-control", @placeholder="Username", @type="password"})
                        </div>
                        <br/>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                    }
                </div>
            </div>	    	
        </div>
    </div>
</div>