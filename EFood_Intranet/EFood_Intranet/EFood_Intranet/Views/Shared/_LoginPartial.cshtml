@using EFood_Intranet.Controllers
<ul class="header-btns">
    <li class="header-account dropdown default-dropdown">
        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
            <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
            </div>
            @if (AppAccount.IsLoggedIn())
            {
                <strong class="text-uppercase">@AppAccount.GetLogin().Username</strong>
            }
            else
            {
                <strong class="text-uppercase">Mi cuenta</strong>
            }
        </div>
        @if(AppAccount.IsLoggedIn())
        {
            @Html.ActionLink("Salir", "CloseSession", "Account", null, new { @role="a", @class="text-uppercase"})
        }
        else
        {
            @Html.ActionLink("Iniciar Sesi√≥n", "Login", "Account", null, new { @role="a", @class="text-uppercase"})
        }
    </li>
    <li class="nav-toggle">
        <button class="nav-toggle-btn main-btn icon-btn">
            <i class="fa fa-bars"></i>
        </button>
    </li>
</ul>