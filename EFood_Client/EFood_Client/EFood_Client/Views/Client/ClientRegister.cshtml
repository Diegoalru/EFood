@model EFoodBLL.ClientModels.Client

@{
    ViewBag.Title = "Registro Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Informaci&oacute;n Cliente </h2>

@using (Html.BeginForm("ClientRegister", "Shoping", null, FormMethod.Post, new {role = "form"}))
{
    @Html.ValidationSummary("", new { @class = "ErrorMessage" })
    <div class="input-group">
        <span class="input-group-addon">@Html.DisplayNameFor(item => item.Name)<i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(item => item.Name, new {@classs = "form-control", @placeholder = "Nombre"})
    </div>

    <div class="input-group">
        <span class="input-group-addon">@Html.DisplayNameFor(item => item.Surname)<i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(item => item.Surname, new {@classs = "form-control", @placeholder = "Apellidos"})
    </div>
    <div class="input-group">
        <span class="input-group-addon">@Html.DisplayNameFor(item => item.Phone)<i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(item => item.Phone, new {@classs = "form-control", @placeholder = "Telefono"})
    </div>
    <div class="input-group">
        <span class="input-group-addon">@Html.DisplayNameFor(item => item.Direction)<i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(item => item.Direction, new {@classs = "form-control", @placeholder = "Direcci√≥n"})
    </div>
    <div class="input-group">
        <span class="input-group-addon">@Html.DisplayNameFor(item => item.Discount)<i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(item => item.Discount, new {@classs = "form-control"})
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Siguiente</button>
    @Html.ActionLink("Volver", "ProductList", "Shoping")
}
