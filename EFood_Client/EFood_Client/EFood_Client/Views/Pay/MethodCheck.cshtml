@using EFood_Client.UtilsMethdos
@model EFoodBLL.ClientModels.Check

@{
    ViewBag.Title = "Cheque";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cheque Electronico</h2>

@if (Utils.GetDiscount() != -1)
{
    <div class="form-group">
        <label>Subtotal</label>
        <input type="text" class="form-control" readonly value="@ViewBag.Subtotal">
    </div>
    <div class="form-group">
        <label>Descuento</label>
        <input type="text" class="form-control" readonly value="@ViewBag.Discount">
    </div>
    <div class="form-group">
        <label>Total</label>
        <input type="text" class="form-control" readonly value="@ViewBag.Total">
    </div>

}
else
{
    <div class="form-group">
        <label>Total</label>
        <input type="text" class="form-control" readonly value="@ViewBag.Subtotal">
    </div>
}

@using (Html.BeginForm("MethodCheck", "Pay", null, FormMethod.Post, new { role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "ErrorMessage" })

    <div class="form-group">
        <label>Numero Cheque <i class="fa fa-lock"></i></label>
        @Html.TextBoxFor(item => item.Number, new { @class = "form-control", @placeholder = "Numero Cheque" })
    </div>

    <div class="form-group">
        <label>Cuenta <i class="fa fa-lock"></i></label>
        @Html.TextBoxFor(item => item.Account, new { @class = "form-control", @placeholder = "Cuenta" })
    </div>

    <div class="form-group">
        @Html.ActionLink("Volver", "PayMethod", "Pay", new { @class = "btn btn-link btn-large" })
        <button type="submit" class="btn btn-default">Siguiente</button>
    </div>
}
